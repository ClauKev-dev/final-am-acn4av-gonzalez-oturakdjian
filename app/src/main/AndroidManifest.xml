<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_icono"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_icono"
        android:supportsRtl="true"
        android:theme="@style/Theme.Parcial1pmacn4avgonzalesoturakdjian">
        
        <!-- Google Maps API Key - Replace YOUR_API_KEY_HERE with your actual Google Maps API key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />
        
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".CarritoActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".DescuentosActivity" />
        <activity android:name=".PedidosEnCursoActivity" />
        <activity android:name=".SubirRecetaActivity" />
        <activity android:name=".LootboxActivity" />
        <activity android:name=".UbicacionActivity" />
    </application>

</manifest>