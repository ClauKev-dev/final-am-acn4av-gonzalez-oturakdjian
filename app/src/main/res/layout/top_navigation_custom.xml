<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/top_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient_green_header"
    android:padding="15dp">

    <ImageView
        android:id="@+id/iv_profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/perfil"
        android:src="@drawable/ic_person"
        app:tint="@color/white"
        tools:ignore="ImageContrastCheck" />

    <!-- Header (MEDI POCKET) between profile and search -->
    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_profile"
        android:layout_toStartOf="@id/iv_search"
        android:layout_centerVertical="true"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="MEDI"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="POCKET"
            android:textColor="@color/primary_green_dark2"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_search"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/buscar"
        android:src="@drawable/ic_search"
        android:clickable="true"
        android:focusable="true"
        app:tint="@color/white"
        tools:ignore="ImageContrastCheck" />

    <!-- Search bar (hidden by default, appears below header when toggled) -->
    <EditText
        android:id="@+id/et_search"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/ll_header"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="8dp"
        android:autofillHints="search"
        android:background="@drawable/search_background"
        android:hint="@string/buscar"
        android:inputType="text"
        android:padding="8dp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:visibility="gone"
        android:imeOptions="actionSearch"
        tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck" />


</RelativeLayout>
